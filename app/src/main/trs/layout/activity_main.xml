<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Input URL Server dan Tombol Simpan -->
    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Server URL" />

    <Button
        android:id="@+id/saveUrlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save URL" />

    <!-- Tombol untuk Mute/Unmute -->
    <Button
        android:id="@+id/muteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute" />

    <!-- Tombol untuk Aktif/Nonaktifkan Voice Chat -->
    <Button
        android:id="@+id/toggleVoiceChatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Voice Chat" />

</LinearLayout>
