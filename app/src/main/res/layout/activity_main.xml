<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Server URL"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/saveUrlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save URL"
        android:layout_below="@id/et_server_url"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute"
        android:layout_below="@id/saveUrlButton"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_enable_voice_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Voice Chat"
        android:layout_below="@id/btn_mute"
        android:layout_margin="16dp"/>
</RelativeLayout>
